<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="horizontal"
  android:gravity="center_horizontal">
  
 <TableLayout android:layout_height="match_parent" 
 android:id="@+id/Column1" 
 android:layout_width="70dip"
 android:gravity="center_vertical">
	
      <TableRow android:layout_height="wrap_content" 
            android:layout_width="wrap_content" 
            android:id="@+id/tableRow1">
            <Button android:id="@+id/button1" 
            android:text=""
             android:layout_width="match_parent" 
             android:layout_height="45dip"></Button>
          
            </TableRow>
     
        <TableRow android:id="@+id/tableRow2" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
            <Button android:text="" android:id="@+id/button2" android:layout_height="wrap_content" android:layout_width="70dip"></Button>
           
        </TableRow>
        <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Button android:text="" android:id="@+id/button3" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        </TableRow>
   
    </TableLayout>
    <TableLayout android:layout_height="match_parent" 
    android:id="@+id/Column2" 
    android:layout_width="70dip"
    android:gravity="center_vertical">
        <Button android:id="@+id/button4" android:text="" android:layout_width="70dip" android:layout_height="45dip"></Button>
        <Button android:id="@+id/button5" android:text="" android:layout_height="wrap_content" android:layout_width="70dip"></Button>
        <Button android:id="@+id/button6" android:text="" android:layout_height="wrap_content" android:layout_width="70dip"></Button>
    </TableLayout>

</LinearLayout>
